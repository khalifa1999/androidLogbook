<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".choose"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/dpm"
        android:contentDescription="@string/logo" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Organisme"
        android:layout_marginStart="89dp"
        android:layout_marginEnd="70dp"
        android:layout_marginTop="10dp"
        android:hint="Direction des Peches Maritimes"
        android:textColorHint="@android:color/holo_red_light"
        android:layout_marginLeft="89dp"
        android:layout_marginRight="70dp" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="1dp"

        android:hint="PARAMETRES MAREE"
        android:gravity="center"
        android:textSize="30dp"
        android:id="@+id/parametremaree"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="150dp"

        android:hint="AJOUT TRAIT"
        android:gravity="center"
        android:textSize="30dp"
        android:id="@+id/ajoutrait"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="150dp"

        android:hint="INVENTAIRE TRAIT"
        android:gravity="center"
        android:textSize="30dp"
        android:id="@+id/inventairetrait"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="150dp"

        android:hint="AFFICHAGE DONNEES"
        android:gravity="center"
        android:textSize="30dp"
        android:id="@+id/datadisplay"
        />
</LinearLayout>